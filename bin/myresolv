#!/bin/bash
if [[ $EUID -ne 0 ]]; then
  echo "This script needs root privileges."
  exec sudo -E "$0" ${1+"$@"}
fi

if [ "${1}" == "vpn" ]; then
  tee /etc/resolv.conf <<MYRESOLV
# Generated by resolvconf
domain office.iruleav.com
search office.iruleav.com
nameserver 10.0.0.1
nameserver 2001:4860:4860::8888
nameserver 2001:4860:4860::8844
nameserver 8.8.8.8
nameserver 8.8.4.4
nameserver 192.168.1.254
MYRESOLV

else
  tee /etc/resolv.conf <<MYRESOLV
# Generated by resolvconf
domain office.iruleav.com
search office.iruleav.com
nameserver 2001:4860:4860::8888
nameserver 2001:4860:4860::8844
nameserver 8.8.8.8
nameserver 8.8.4.4
nameserver 192.168.1.254
MYRESOLV

fi
