#!/bin/bash
if [[ $EUID -ne 0 ]]; then
  echo "This script needs root privileges."
  exec sudo -E "$0" ${1+"$@"}
fi

if [ "${1}" == "vpn" ]; then
  tee /etc/resolv.conf <<MYRESOLV
# Generated by resolvconf
domain sandiego.iruleav.com
search office.iruleav.com sandiego.iruleav.com
nameserver 10.0.0.1
nameserver 8.8.8.8
nameserver 8.8.4.4
MYRESOLV

else
  tee /etc/resolv.conf <<MYRESOLV
# Generated by resolvconf
domain sandiego.iruleav.com
search office.iruleav.com sandiego.iruleav.com
nameserver 8.8.8.8
nameserver 8.8.4.4
MYRESOLV

fi
